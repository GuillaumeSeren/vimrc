#include <stdio.h>

/**
 * Fonction de calcul factoriel récursif.
 * --------------------------------------
 * long N : le nombre à appliquer la factorielle.
**/
unsigned long factoriel_recursif(long N)
{
	printf("- N = %i \n", N);
	if(N > 1)
	{
		return (N * factoriel(N - 1));
	}
	else
	{
		return 1;
	}
}

unsigned long factoriel_iteratif(long N)
{
	unsigned long resultat = 1;
	unsigned int cpt;
	for(cpt = 2; cpt <= N; cpt++)
	{
		resultat *= cpt;
	}
	return resultat;
}

int main(void)
{
	long N;
	printf("\n Entrez un entier : \n");
	scanf("%i", &N);
	printf("La factorielle de %i, vaut : %i", N, factoriel_iteratif(N));
	
	return 0;
}
