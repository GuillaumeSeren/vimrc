#include <stdio.h>

/**
 * Exo : "Ecrire une fonction swap, à 2 paramètres,
 *		  qui permute les valeur de 2 variables entières 
 *		  quelconques."
 **/
void swap (int *, int *);

main()
{
	int x=1, y=2;
	swap(&x, &y);
	printf("x=%d, y=%d \n", x,y);
	return 0;	
}

void swap(int *a, int *b)
{
	printf("Appel de la fonction SWAP \n");
	printf("a=%d \n", *a);
	printf("b=%d \n", *b);
	int *c = 0;
	printf("c=%d \n", c);
	c  = (int)*a;
	*a = (int)*b;
	*b = (int)c;
}
